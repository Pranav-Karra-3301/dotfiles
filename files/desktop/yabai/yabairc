# default layout (can be bsp, stack or float)
yabai -m config layout bsp


# New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# padding set to 12px

yabai -m config top_padding 10
yabai -m config bottom_padding 10
yabai -m config left_padding 10
yabai -m config right_padding 10
yabai -m config window_gap 10

# center mouse on window with focus
yabai -m config mouse_follows_focus on

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize


# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Paltero$" manage=off
yabai -m rule --add app="^Terminal$" space=2
yabai -m rule --add app="^BetterTouchTool$" manage=off
yabai -m rule --add app="^Step Two$" manage=off
yabai -m rule --add app="^Wipr$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Hazel$" manage=off
yabai -m rule --add app="^CleanShot X$" manage=off
yabai -m rule --add app="^IINA$" manage=off
yabai -m rule --add app="^Wipr$" manage=off
yabai -m rule --add app="^Toggl Track$" manage=off
yabai -m rule --add app="^Github Desktop$" manage=off
yabai -m rule --add app="^iTerm2$" manage=off

yabai -m config auto_balance on


yabai -m rule --add app="^Spotify$" space=4

# Reload yabai scripting addition on Dock restart
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# Handle application terminated event
yabai -m signal --add event=application_terminated action="yabai -m window --focus $(yabai -m query --windows --window | jq -r 'select(.app == \"Finder\") | .id')"

# Handle window destroyed event
yabai -m signal --add event=window_destroyed action="yabai -m window --focus $(yabai -m query --windows --window | jq -r 'select(.app == \"Finder\") | .id')"

# Optional: Handle minimized windows
# yabai -m signal --add event=window_minimized action="yabai -m space --balance"


